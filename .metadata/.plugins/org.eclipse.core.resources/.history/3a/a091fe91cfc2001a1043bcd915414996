---
  AWSTemplateFormatVersion: '2010-09-09'
  Description: "Template de deploy para a função Lambda"
  Resources:
    FileConverterFunction:
      Type: AWS::Serverless::Function
      Properties:
        CodeUri: target/dadosabertos-1.0.0-shaded.jar
        Handler: br.com.itau.financas.contabil.dadosabertos.handler.FileConverterHandler::handleRequest
        Runtime: java8
        MemorySize: 256
        Timeout: 300
        Events:
          FileConverter:
            Type: Api
            Properties:
              Path: /dadosabertos/upload
              Method: post